rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /Usuarios/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if request.auth != null;
      allow delete: if request.auth != null;
    }

    match /Listas/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /Empleos/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }

    match /chats/{document} {
      allow create: if /databases/$(database)/documents/Usuarios/$(request.auth.uid) in request.resource.data.users;
      allow read: if /databases/$(database)/documents/Usuarios/$(request.auth.uid) in resource.data.users;
      allow write: if /databases/$(database)/documents/Usuarios/$(request.auth.uid) in resource.data.users;
      allow delete: if false;
    }

    match /chat_messages/{document} {
      allow create: if /databases/$(database)/documents/Usuarios/$(request.auth.uid) in get(request.resource.data.chat).data.users
&& /databases/$(database)/documents/Usuarios/$(request.auth.uid) == request.resource.data.user;
      allow read: if /databases/$(database)/documents/Usuarios/$(request.auth.uid) in get(resource.data.chat).data.users;
      allow write: if false;
      allow delete: if false;
    }

    match /candidatos/{document} {
      allow create: if true;
      allow read: if true;
      allow write: if false;
      allow delete: if false;
    }
  }
}
